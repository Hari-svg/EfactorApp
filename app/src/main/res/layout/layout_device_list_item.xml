    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/space_10">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_3"
            android:background="@drawable/background_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lilay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/device_img"
                    android:layout_width="@dimen/space_100"
                    android:layout_height="@dimen/space_80"
                    android:padding="@dimen/space_10"
                    android:src="@drawable/fan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.sravan.efactorapp.Base.CustomTextView
                            android:id="@+id/device_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_8"
                            android:layout_marginEnd="@dimen/space_10"
                            android:layout_marginBottom="@dimen/space_8"
                            android:layout_weight="1"
                            android:fontFamily="@font/lato_medium"
                            android:gravity="start"
                            android:text="Name"
                            android:textColor="@color/black" />

                        <com.sravan.efactorapp.Base.CustomTextView
                            android:id="@+id/textViewType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="70dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/lato_light"
                            android:text="Device Type"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/switchPower"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewName"
                            app:layout_constraintVertical_bias="0.014" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/settings"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="@dimen/space_24"
                        android:layout_marginTop="@dimen/space_8"
                        android:layout_marginEnd="@dimen/space_10"
                        android:layout_marginBottom="@dimen/space_8"
                        android:layout_weight="1"
                        android:src="@drawable/settings" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <com.sravan.efactorapp.Base.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_10"
                            android:gravity="start"
                            android:text="Speed Control : "
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_medium" />

                        <com.warkiz.widget.IndicatorStayLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <!--your layout-->
                            <com.warkiz.widget.IndicatorSeekBar
                                android:id="@+id/speed_control"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:isb_indicator_color="@color/gray"
                                app:isb_indicator_text_color="@color/colorSkyBlue"
                                app:isb_indicator_text_size="@dimen/text_small"
                                app:isb_max="5"
                                app:isb_min="0"
                                app:isb_only_thumb_draggable="false"
                                app:isb_show_indicator="circular_bubble"
                                app:isb_show_tick_marks_type="oval"
                                app:isb_show_tick_texts="true"
                                app:isb_thumb_color="@color/green"
                                app:isb_thumb_size="20dp"
                                app:isb_tick_marks_color="@color/orange"
                                app:isb_tick_marks_drawable="@drawable/fan"
                                app:isb_tick_marks_size="@dimen/space_15"
                                app:isb_tick_texts_color="@color/black"
                                app:isb_tick_texts_size="15sp"
                                app:isb_ticks_count="6"
                                app:isb_track_background_color="@color/gray"
                                app:isb_track_background_size="2dp"
                                app:isb_track_progress_color="@color/green"
                                app:isb_track_progress_size="4dp" />


                            <!--your layout-->
                        </com.warkiz.widget.IndicatorStayLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/reverseLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_50"
                        android:layout_weight="2"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reverse"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_refresh_24" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.sravan.efactorapp.Base.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_10"
                            android:gravity="start"
                            android:text="LED Color : "
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_medium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/space_10"
                            android:orientation="horizontal"
                            android:weightSum="7">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/led_white"
                                android:layout_width="@dimen/space_30"
                                android:layout_height="@dimen/space_30"
                                android:layout_margin="@dimen/space_3"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corner_search"
                                android:src="@color/white"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/led_pink"
                                android:layout_width="@dimen/space_30"
                                android:layout_height="@dimen/space_30"
                                android:layout_margin="@dimen/space_3"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corner_search"
                                android:src="@color/pink"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/led_orange"
                                android:layout_width="@dimen/space_30"
                                android:layout_height="@dimen/space_30"
                                android:layout_margin="@dimen/space_3"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corner_search"
                                android:src="@color/orange"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/led_red"
                                android:layout_width="@dimen/space_30"
                                android:layout_height="@dimen/space_30"
                                android:layout_margin="@dimen/space_3"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corner_search"
                                android:src="@color/red"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/led_cyan"
                                android:layout_width="@dimen/space_30"
                                android:layout_height="@dimen/space_30"
                                android:layout_margin="@dimen/space_3"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corner_search"
                                android:src="@color/cyan"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/led_blue"
                                android:layout_width="@dimen/space_30"
                                android:layout_height="@dimen/space_30"
                                android:layout_margin="@dimen/space_3"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corner_search"
                                android:src="@color/blue"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/led_green"
                                android:layout_width="@dimen/space_30"
                                android:layout_height="@dimen/space_30"
                                android:layout_margin="@dimen/space_3"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corner_search"
                                android:src="@color/green"
                                app:civ_border_width="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LED_off"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_50"
                        android:layout_weight="2"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Led Off"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="@dimen/space_24"
                            android:layout_height="@dimen/space_24"
                            android:src="@drawable/poweroff" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="visible"
                    android:orientation="vertical">

                    <com.sravan.efactorapp.Base.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_10"
                        android:gravity="start"
                        android:text="Mode Control : "
                        android:textColor="@color/darkgrey"
                        android:textSize="@dimen/text_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:layout_marginHorizontal="@dimen/space_20"
                        android:layout_marginVertical="@dimen/space_8"
                        android:weightSum="3">
                        <com.sravan.efactorapp.Base.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_10"
                            android:gravity="end"
                            android:text="EFACTOR"
                            android:layout_weight="1"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_medium" />
                        <Switch
                            android:id="@+id/switchMode"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/space_30"
                            android:layout_margin="@dimen/space_5"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:outlineSpotShadowColor="@color/gray"
                            android:pointerIcon="text"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_10"
                            android:gravity="start"
                            android:text="BLUETOOTH"
                            android:layout_weight="1"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_medium" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Switch
                        android:id="@+id/switchPower"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_30"
                        android:layout_margin="@dimen/space_5"
                        android:gravity="center"
                        android:outlineSpotShadowColor="@color/gray"
                        android:pointerIcon="text"
                        android:text="Power Switch"
                        android:textColor="@color/black"
                        android:textOff="OFF"
                        android:textOn="ON" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="@dimen/space_5"
            android:gravity="center">

            <!--      <Button
                      android:id="@+id/take_reading_bt"
                      android:layout_width="@dimen/space_150"
                      android:layout_height="@dimen/space_30"
                      android:background="@drawable/a3_grad"
                      android:fontFamily="@font/lato_black"
                      android:gravity="center"
                      android:text="Take Reading"
                      android:textColor="@color/white" />-->
            <!--   <Switch
                   android:id="@+id/switchPower"
                   android:layout_width="@dimen/space_100"
                   android:layout_height="@dimen/space_30"
                   android:background="@drawable/a3_grad"
                   android:gravity="center"
                   android:outlineSpotShadowColor="@color/white"
                   android:pointerIcon="text"
                   android:textColor="@color/white"
                   android:textOff="OFF"
                   android:textOn="ON" />-->
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
